{
  "name": "packdev",
  "version": "0.1.0",
  "description": "PackDev - A TypeScript-based CLI tool for package development utilities",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "packdev": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "cd test && node run-all-tests.js",
    "test:unit": "cd test && node unit/packageManager.test.js",
    "test:integration": "cd test && node run-all-tests.js --integration-only",
    "test:unit-only": "cd test && node run-all-tests.js --unit-only",
    "test-demo": "cd test && npm test",
    "typecheck": "tsc --noEmit",
    "lint": "echo \"No linter configured yet\"",
    "prepare": "npm run build",
    "pack": "node scripts/pack.js",
    "pack:bash": "scripts/pack.sh",
    "test-install": "node scripts/test-install.js",
    "package-info": "node scripts/package-info.js",
    "test-hooks": "node scripts/test-hooks.js",
    "demo-hooks": "node scripts/demo-hooks.js",
    "demo-workflow": "node scripts/demo-workflow.js",
    "validate-docs": "node scripts/validate-docs.js"
  },
  "keywords": [
    "cli",
    "typescript",
    "development",
    "package",
    "tools"
  ],
  "author": "",
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "LICENSE.md"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@types/commander": "^2.12.0",
    "@types/node": "^24.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "commander": "^14.0.1"
  }
}
